%nav.navbar.navbar-default.navbar-top
  .container
    .navbar-header
      - if user_signed_in?
        #Intercom
        %button.navbar-toggle{type: 'button', data: {toggle: 'collapse', target: '#navbar-collapse'}}
          %span.sr-only= t :"sr.toggle_navigation"
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

        %a.navbar-brand
          .container
            .row.header-top
              %a{ href: "https://shapermit.com/", title: "RMIT University home page" }
                .col-md-3.app-logo{ style: "background-image: url(https://shapermit.com/sites/default/themes/flip_theme/img/rmit-logo.png)" }
                .col-md-2.app-logo.second-logo{ style: "background-image: url(https://shapermit.com/sites/default/themes/flip_theme/img/shape-rmit-logo.png)" }
              .col-md-4.nav-float-right.collapse.navbar-collapse#navbar-collapse
                %ul.nav.navbar-nav
                  .user-options.visible-xs
                  = render 'search'
              .col-md-3.user-assets.nav-float-right
                %ul.nav.navbar-nav
                  %li#inbox-container
                    %a{href: inbox_path}
                      %i.fa.fa-inbox
                      %span#inbox-count.activity-count.label
                  %li.dropdown#notifications-container
                    %a.dropdown-toggle.notifications-dropdown-btn{'data-toggle' => 'dropdown', :href => '#', :id => 'notifications-toggle'}
                      %i.fa.fa-bell
                      %span#notifications-count.label.activity-count
                    %ul.dropdown-menu
                      %li
                        %h3= t("notifications.header")
                      %li#notification-dropdown-items
                        %ul
                          %li Loading
                      %li#notifications-see-more= link_to t(:see_all_notifications), notifications_path
                  %li.dropdown#groups
                    %a.dropdown-toggle.groups-dropdown-btn{href: "#", 'data-toggle' => 'dropdown'}
                      %i.fa.fa-group
                      %span.hidden-xs= t :"common.groups"
                    %ul.dropdown-menu
                      #group-dropdown-items
                      - if current_user.show_start_group_button?
                        %li.group-item.group-links
                          =link_to t(:request_new_group), start_group_path, class: 'new-group'
                        %li.group-item.group-links
                          =link_to t(:find_a_group), explore_path, class: 'find-group'
              %a{ href: "https://shapermit.com/", title: "ShapeRMIT home" }
                
              
          .container
            .row
              .col-md-3.user-menu-list.hidden-xs
                = render 'user_dropdown'
              .col-md-9.child-navigation 
                %ul
                  %li     
                  = link_to 'THE STORY SO FAR', 'http://shapermit.com/the-story-so-far'
                  %li 
                  = link_to 'THE NEXT 5 YEARS', 'http://shapermit.com/the-next-5-years'
                  %li 
                  = link_to 'DISCUSSIONS & WORKGROUPS', 'http://shapermit.com/discussions-and-workgroups'
                  %li 
                  = link_to 'NEWS & EVENTS', 'http://shapermit.com/news-and-events'
                  %li 
                  = link_to 'CONTACT', 'http://shapermit.com/contact'
        



        

      - else
        %a.navbar-brand.app-logo{ href: dashboard_or_root_path, title: t(:"organisation.name"), style: "background-image: url(#{logo_path})" }
        %nav
          %ul.nav.navbar-nav.navbar-right.pull-right
            - unless controller_name == "group_requests"
              %li=link_to t(:log_in), new_user_session_path(return_to: request.original_url), class: 'login'
